<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/meal_bnt_beijing"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="43dp"
                android:padding="15dp"
                android:src="@drawable/order_ic_fanhuio" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_toLeftOf="@id/iv_collection"
                android:padding="13dp"
                android:src="@drawable/meal_ic_fenxiang" />

            <ImageView
                android:id="@+id/iv_collection"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:src="@drawable/meal_ic_shoucang" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-120dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/meal_bnt_baisebj"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/pingjia_ic_bumanyi1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="果实先生（新安店）"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="起送￥15｜配送￥3｜月售9989"
                    android:textColor="@color/hint_text_color"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/meal_ic_pingfen"
                android:gravity="center"
                android:text="4.7评分"
                android:textColor="@color/text_white"
                android:textSize="12sp" />
        </RelativeLayout>
        <!--满立减-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="44dp"
                android:layout_height="17dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_white_red"
                android:gravity="center"
                android:text="20减10"
                android:textColor="@color/red"
                android:textSize="10sp" />

            <TextView
                android:layout_width="44dp"
                android:layout_height="17dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_white_red"
                android:gravity="center"
                android:text="40减15"
                android:textColor="@color/red"
                android:textSize="10sp" />

            <TextView
                android:layout_width="44dp"
                android:layout_height="17dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_white_red"
                android:gravity="center"
                android:text="60减30"
                android:textColor="@color/red"
                android:textSize="10sp" />

            <TextView
                android:layout_width="44dp"
                android:layout_height="17dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_white_red"
                android:gravity="center"
                android:text="90减45"
                android:textColor="@color/red"
                android:textSize="10sp" />

        </LinearLayout>
        <!--代金券-->
        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/meal_ic_youhuiquan">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical"
                android:text="共"
                android:textColor="#FEFEFE"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="￥10"
                android:textColor="#FEFEFE"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="店铺"
                android:textColor="#FEFEFE"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="7dp"
                android:gravity="end|center_vertical"
                android:text="领取"
                android:textColor="#FEFEFE"
                android:textSize="12sp" />
        </LinearLayout>
        <!--公告-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="公告：欢迎光临，很高兴为您服务~"
                android:textColor="@color/hint_text_color"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/common_xiala" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <!--菜单-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菜单"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:layout_width="23dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/main_color" />
        </LinearLayout>
        <!--评价-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="52dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价"
                android:textColor="@color/hint_text_color"
                android:textSize="17sp" />

            <TextView
                android:layout_width="23dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/main_color"
                android:visibility="invisible" />
        </LinearLayout>
        <!--商家-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="52dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家"
                android:textColor="@color/hint_text_color"
                android:textSize="17sp" />

            <TextView
                android:layout_width="23dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/main_color"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <TextView style="@style/line_fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            tools:listitem="@layout/item_product_name" />
    </LinearLayout>

</LinearLayout>