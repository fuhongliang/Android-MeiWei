<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bg_view"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/order_bnt_jiedan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="38dp"
        android:layout_height="43dp"
        android:layout_marginTop="18dp"
        android:padding="15dp"
        android:src="@drawable/order_ic_fanhuio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在"
        android:textColor="@color/text_white"
        android:layout_marginTop="28dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="@id/iv_back"
        android:textSize="27sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="13dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/tv_text_status"
        app:layout_constraintTop_toTopOf="@id/tv_text_status"
        app:layout_constraintBottom_toBottomOf="@id/tv_text_status"
        android:background="@drawable/order_ic_xz" />

    <LinearLayout
        android:id="@+id/ll_ring"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_text_status"
        android:background="@drawable/bg_white">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="15dp"
            android:src="@drawable/order_ic_tongzhi" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/hint_text_color"
            android:textSize="15sp" />
    </LinearLayout>

    <!--订单送达时间-->
    <LinearLayout
        android:id="@+id/ll_order_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_white"
        app:layout_constraintTop_toBottomOf="@id/ll_ring"
        android:minHeight="150dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="7dp"
            android:layout_gravity="center"
            android:background="@drawable/order_ic_tzhuai"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_order_announcement_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_text_color"
            android:layout_marginStart="15dp"/>

        <!--订单按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_order"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_gray"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/typed_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_after_sale"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_gray"
                android:gravity="center"
                android:text="申请售后"
                android:textColor="@color/typed_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_call_store"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_gray"
                android:gravity="center"
                android:text="致电商家"
                android:textColor="@color/typed_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_store_information"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_gray"
                android:gravity="center"
                android:text="商家消息"
                android:textColor="@color/typed_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_call_rider"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_gray"
                android:gravity="center"
                android:text="致电骑手"
                android:textColor="@color/typed_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_rider_information"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_gray"
                android:gravity="center"
                android:text="骑手消息"
                android:textColor="@color/typed_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_reminders"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_gray"
                android:gravity="center"
                android:text="催单"
                android:textColor="@color/typed_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_one_more"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_gray"
                android:gravity="center"
                android:text="再来一单"
                android:textColor="@color/typed_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_shopping"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_gray"
                android:gravity="center"
                android:text="逛逛别家"
                android:textColor="@color/typed_text_color"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_evaluation"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/address_main_color"
                android:gravity="center"
                android:text="立即评价"
                android:textColor="@color/main_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_confirm_receipt"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/address_main_color"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="@color/main_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/address_main_color"
                android:gravity="center"
                android:text="立即支付"
                android:textColor="@color/main_color"
                android:textSize="15sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/rl_refund"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:text="退款详情"
                android:textColor="@color/typed_text_color"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="35dp"
                android:text="退款中"
                android:textColor="#45ACFF"
                android:textSize="17sp" />

            <ImageView style="@style/arrow"
                android:layout_gravity="center_vertical|end"/>
        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_order_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_order_time">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--店铺名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bg_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_store"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="水果先生"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@id/tv_store_name"
                        android:background="@drawable/order_ic_xz1" />

                    <ImageView
                        android:id="@+id/iv_store_phone"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentEnd="true"
                        android:padding="13dp"
                        android:src="@drawable/order_ic_dianhua" />

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_toLeftOf="@id/iv_store_phone"
                        android:padding="13dp"
                        android:src="@drawable/order_ic_xiaoxi"
                        android:visibility="gone" />
                </RelativeLayout>

                <View style="@style/line_fff" />

                <LinearLayout
                    android:id="@+id/ll_goods_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
                <!--查看更多-->
                <LinearLayout
                    android:id="@+id/ll_expand"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_button_gray"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_watch_more"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="查看更多"
                        android:textColor="@color/hint_text_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="8dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/common_xiala" />
                </LinearLayout>
                <!--包装费-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="包装费"
                        android:textColor="@color/typed_text_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="￥2"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </FrameLayout>
                <!--配送费-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送费"
                        android:textColor="@color/typed_text_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="￥3"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </FrameLayout>
                <!--满减优惠-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="满减优惠"
                        android:textColor="@color/typed_text_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_full_reduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="-￥233"
                        android:textColor="@color/red"
                        android:textSize="17sp" />
                </FrameLayout>
                <!--代金券优惠-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="代金券优惠"
                        android:textColor="@color/typed_text_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_voucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="￥25"
                        android:textColor="@color/red"
                        android:textSize="17sp" />
                </FrameLayout>

                <View
                    style="@style/line_fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" />
                <!--已优惠和实付金额-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:id="@+id/tv_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="已优惠"
                        android:textColor="@color/hint_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_offer_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_offer"
                        android:gravity="center_vertical"
                        android:text="￥25"
                        android:textColor="@color/red"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv_money_string"
                        android:text="实付金额"
                        android:textColor="@color/typed_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_money_string"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv_payment_money"
                        android:text="￥"
                        android:textColor="@color/red"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_payment_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="60.8"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>
            <!--配送信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_white"
                android:orientation="vertical">
                <!--配送信息-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="配送信息"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </FrameLayout>
                <!--配送服务-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="配送服务"
                        android:textColor="@color/hint_text_color"
                        android:textSize="15sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:text="邻邻發配送"
                        android:textColor="@color/typed_text_color"
                        android:textSize="15sp" />

                </FrameLayout>
                <!--期望时间-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="期望时间"
                        android:textColor="@color/hint_text_color"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:text="立即送达"
                        android:textColor="@color/typed_text_color"
                        android:textSize="15sp" />

                </FrameLayout>
                <!--配送地址-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/tv_delivery_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="配送地址"
                        android:textColor="@color/hint_text_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_announcement_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_delivery_address"
                        android:gravity="end"
                        android:text="张铭明(先生)  15865482564"
                        android:textColor="@color/typed_text_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_announcement_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_announcement_one"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_delivery_address"
                        android:gravity="end"
                        android:text="海关大厦(20楼2010室)"
                        android:textColor="@color/typed_text_color"
                        android:textSize="15sp" />

                </RelativeLayout>

            </LinearLayout>
            <!--订单信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_white"
                android:orientation="vertical">
                <!--订单信息-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="订单信息"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </FrameLayout>
                <!--订单号码-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="订单号码"
                        android:textColor="@color/hint_text_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="62dp"
                        android:text="6227 2430 0988 4740 5"
                        android:textColor="@color/typed_text_color"
                        android:textIsSelectable="true"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_copy"
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_gray"
                        android:gravity="center"
                        android:text="复制"
                        android:textColor="@color/typed_text_color"
                        android:textSize="12sp" />

                </RelativeLayout>
                <!--下单时间-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="下单时间"
                        android:textColor="@color/hint_text_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:text="2019-04-28  11:22:55"
                        android:textColor="@color/typed_text_color"
                        android:textSize="15sp" />

                </FrameLayout>
                <!--支付方式-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="支付方式"
                        android:textColor="@color/hint_text_color"
                        android:textSize="15sp" />

                    <TextView
