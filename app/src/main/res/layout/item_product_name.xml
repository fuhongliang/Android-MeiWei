<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:minHeight="120dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:scaleType="fitXY"
        android:background="@drawable/home_zanwutupian"
        />

    <LinearLayout
        android:id="@+id/ll_goods_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/iv_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_commodity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="现切甜橙子"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="1份少于500g软糯细腻的我清..."
            android:textColor="@color/hint_text_color"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="月售232｜点赞85"
            android:textColor="@color/hint_text_color"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.8折"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="限购1份"
                android:textColor="@color/red"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥666"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/tv_money"
                android:text="￥14.9"
                android:textColor="@color/hint_text_color"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_toLeftOf="@+id/tv_amount"
                android:padding="10dp"
                android:src="@drawable/meal_ic_jianshao" />
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#333333"
                android:text="1"
                android:layout_toLeftOf="@+id/iv_add"
                />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/meal_ic_zengjia" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>