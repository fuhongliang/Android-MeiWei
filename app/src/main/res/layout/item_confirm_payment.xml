<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_announcement_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="现切黑美人西瓜"
        android:textColor="@color/navigation_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_announcement_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/tv_announcement_name"
        android:text="x1"
        android:textColor="@color/navigation_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_announcement_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="￥12.8"
        android:textColor="@color/navigation_color"
        android:textSize="15sp" />


</RelativeLayout>