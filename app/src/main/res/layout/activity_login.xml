<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header" />
    <!--验证码登录-->
    <TextView
        android:id="@+id/tv_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="验证码登录"
        android:textColor="@color/black"
        android:textSize="33sp" />
    <!--手机号-->
    <RelativeLayout
        android:id="@+id/rl_number"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/tv_verification"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="+86"
            android:textColor="@color/navigation_color"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="16dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_toRightOf="@id/tv_number"
            android:padding="5dp"
            android:src="@drawable/top_ic_xlxz" />

        <EditText
            android:id="@+id/et_number"
            style="@style/base_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_expand"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/edit_ic_gb" />

        <ImageView
            style="@style/dividing_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp" />
    </RelativeLayout>

    <!--获取验证码-->
    <RelativeLayout
        android:id="@+id/rl_verification"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/rl_number"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp">


        <EditText
            style="@style/base_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tv_obtain_verification"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_obtain_verification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:text="获取验证码"
            android:textColor="@color/main_color"
            android:textSize="17sp" />

        <ImageView
            style="@style/dividing_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp" />
    </RelativeLayout>
    <!--登录-->
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/rl_verification"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_login_selector"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/text_white"
        android:textSize="18sp" />
    <!--第三方账号登录-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_third_party"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/tv_third_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="第三方账号登录"
            android:textColor="@color/hint_text_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="43dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_third_party"
            android:background="#cccccc" />
    </RelativeLayout>

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_above="@id/ll_protocol"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:src="@drawable/icon_weixin" />

    <LinearLayout
        android:id="@+id/ll_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录注册代表同意"
            android:textColor="@color/hint_text_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:textColor="@color/main_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/hint_text_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:textColor="@color/main_color"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>