<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp">

    <com.baba.GlideImageView
        android:id="@+id/iv_commodity"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_margin="15dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/iv_commodity">

        <TextView
            android:id="@+id/tv_commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="葱哥烤鱼饭(宝安店)"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_merchant_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_commodity_name"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tv_sale_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="月售9999"
                android:textColor="@color/typed_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:gravity="end"
                android:text="35分钟｜1.2km"
                android:textColor="@color/hint_text_color"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_shipping_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_merchant_info"
            android:layout_marginTop="2dp"
            android:text="起送￥15 | 配送费￥3"
            android:textColor="@color/typed_text_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/iv_commodity"
        android:layout_marginLeft="92dp"
        android:layout_marginRight="15dp"
        android:layerType="software"
        android:background="@drawable/shop_line" />

    <TextView
        android:id="@+id/tv_limit_discounts"
        android:layout_width="50dp"
        android:layout_height="17dp"
        android:layout_below="@id/iv_line"
        android:layout_marginStart="92dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/bg_limit_discounts"
        android:gravity="center"
        android:text="限时折扣"
        android:textColor="#FF853C"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/tv_full_reduction"
        android:layout_width="50dp"
        android:layout_height="17dp"
        android:layout_marginTop="11dp"
        android:layout_below="@id/tv_limit_discounts"
        android:background="@drawable/bg_limit_discounts"
        android:layout_marginStart="92dp"
        android:gravity="center"
        android:text="满立减"
        android:visibility="gone"
        android:textColor="#FF853C"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/ll_reduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_limit_discounts"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" />

</RelativeLayout>