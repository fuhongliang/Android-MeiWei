<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_announcement"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/ll_store_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp">

        <com.baba.GlideImageView
            android:id="@+id/iv_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/tab_bnt_bj_xs" />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:maxWidth="156dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:background="@drawable/order_ic_xz1" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/iv_line"
        android:layout_toRightOf="@id/ll_store_name"
        android:gravity="end|center_vertical"
        android:text="订单已完成"
        android:textColor="@color/hint_text_color"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_store_name"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:id="@+id/ll_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_line"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/typed_text_color"
            android:textSize="14sp" />

        <!--<TextView-->
        <!--android:id="@+id/tv_number"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text=" 等 2件商品"-->
        <!--android:textColor="@color/typed_text_color"-->
        <!--android:textSize="14sp" />-->

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="￥99"
            android:textColor="@color/typed_text_color"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_evaluation"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_below="@id/ll_product_name"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/address_main_color"
        android:gravity="center"
        android:text="评价"
        android:textColor="@color/main_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_one_more"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_below="@id/ll_product_name"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/tv_evaluation"
        android:background="@drawable/bg_gray"
        android:gravity="center"
        android:text="再来一单"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>