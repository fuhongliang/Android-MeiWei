<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/meal_bnt_beijing"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="38dp"
                android:layout_height="43dp"
                android:padding="15dp"
                android:src="@drawable/order_ic_fanhuio" />

            <ImageView
                android:id="@+id/iv_share_it"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_toLeftOf="@id/iv_collection"
                android:padding="13dp"
                android:src="@drawable/meal_ic_fenxiang" />

            <ImageView
                android:id="@+id/iv_collection"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:src="@drawable/meal_ic_shoucang" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-120dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/meal_bnt_baisebj"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/pingjia_ic_bumanyi1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="17dp">

                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="果实先生（新安店）"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_merchant_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="起送￥15｜配送￥3｜月售9989"
                    android:textColor="@color/hint_text_color"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_evaluation"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/meal_ic_pingfen"
                android:gravity="center"
                android:text="4.7评分"
                android:textColor="@color/text_white"
                android:textSize="12sp" />
        </RelativeLayout>
        <!--满立减-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="44dp"
                android:layout_height="17dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_white_red"
                android:gravity="center"
                android:text="20减10"
                android:textColor="@color/red"
                android:textSize="10sp" />

            <TextView
                android:layout_width="44dp"
                android:layout_height="17dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_white_red"
                android:gravity="center"
                android:text="40减15"
                android:textColor="@color/red"
                android:textSize="10sp" />

            <TextView
                android:layout_width="44dp"
                android:layout_height="17dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_white_red"
                android:gravity="center"
                android:text="60减30"
                android:textColor="@color/red"
                android:textSize="10sp" />

            <TextView
                android:layout_width="44dp"
                android:layout_height="17dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_white_red"
                android:gravity="center"
                android:text="90减45"
                android:textColor="@color/red"
                android:textSize="10sp" />

        </LinearLayout>
        <!--代金券-->
        <LinearLayout
            android:id="@+id/ll_voucher"
            android:layout_width="128dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/meal_ic_youhuiquan">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical"
                android:text="共"
                android:textColor="#FEFEFE"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="￥10"
                android:textColor="#FEFEFE"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="店铺"
                android:textColor="#FEFEFE"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="7dp"
                android:gravity="end|center_vertical"
                android:text="领取"
                android:textColor="#FEFEFE"
                android:textSize="12sp" />
        </LinearLayout>
        <!--公告-->
        <RelativeLayout
            android:id="@+id/rl_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="公告：欢迎光临，很高兴为您服务~"
                android:textColor="@color/hint_text_color"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/common_xiala" />
        </RelativeLayout>
    </LinearLayout>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="true"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="@color/main_color"
        app:stl_indicatorThickness="3dp"
        app:stl_indicatorWidth="20dp"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="#F0F0F0"
        app:stl_underlineThickness="1dp"
        app:stl_dividerColor="#4D000000"
        app:stl_dividerThickness="0dp"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="#666666"
        app:stl_defaultTabTextSize="17sp"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="false"
        app:stl_clickable="true"
        app:stl_titleOffset="24dp"
        app:stl_drawDecorationAfterTab="false"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>